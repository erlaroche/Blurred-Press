- content_for :sidebar do
  %ul.side-nav
    - @posts.each do |post|
      = post_link(post, @post)

%p#notice= notice

%article
  %h1.title= @post.title

  %time{datetime: @post.date.to_s, pubdate: true}= @post.date.to_s(:short)

  .body= simple_format(@post.body)

= link_to 'Edit', edit_post_path(@post), class: 'button'
\|
= link_to 'Back', posts_path
